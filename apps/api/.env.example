# =============================================================================
# Environment Configuration for gr8diy-api
# =============================================================================
# Copy this file to .env and update values for your environment.
#
# IMPORTANT: Generate a secure JWT_SECRET_KEY with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# Legend:
#   [REQUIRED] - Must be set for the application to run
#   [OPTIONAL] - Has a default value if not set
#   [SECRET]   - Sensitive value, keep secure in production
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# [REQUIRED] PostgreSQL database URL with asyncpg driver
# Format: postgresql+asyncpg://username:password@host:port/database
# Note: SSL is configured automatically based on ENVIRONMENT
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/gr8diy

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Redis URL for caching and session storage
# Default: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# [SECRET] [REQUIRED] Secret key for JWT token signing
# CRITICAL: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Minimum 32 characters, must NOT be a default value
JWT_SECRET_KEY=CHANGE_THIS_GENERATE_WITH_PYTHON_SECRET_COMMAND

# [OPTIONAL] JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256

# [OPTIONAL] Access token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# [OPTIONAL] Refresh token expiration time in days (default: 7)
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Password Policy Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Minimum password length (default: 8)
PASSWORD_MIN_LENGTH=8

# [OPTIONAL] Require uppercase letters (default: true)
PASSWORD_REQUIRE_UPPERCASE=true

# [OPTIONAL] Require lowercase letters (default: true)
PASSWORD_REQUIRE_LOWERCASE=true

# [OPTIONAL] Require digits (default: true)
PASSWORD_REQUIRE_DIGIT=true

# [OPTIONAL] Require special characters (default: true)
PASSWORD_REQUIRE_SPECIAL=true

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Allowed CORS origins (comma-separated)
# Default: http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Environment Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Environment: development, staging, or production
# Default: development
# Note: SSL behavior is configured based on this value
ENVIRONMENT=development

# [OPTIONAL] Enable debug mode (default: false)
DEBUG=true

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Application name (default: gr8diy-api)
APP_NAME=gr8diy-api

# [OPTIONAL] Application version (default: 0.1.0)
APP_VERSION=0.1.0

# [OPTIONAL] API v1 prefix (default: /api/v1)
API_V1_PREFIX=/api/v1
